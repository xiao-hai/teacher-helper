      <view class="dialog-content">我们每天推送你的学生的学习总结报告到你的微信</view>
      <view class="zan-btns" >
      <button class="zan-btn zan-btn--primary" bindtap="bindCancelTap">取消</button>
    </view>
    <view class="zan-btns" >
      <button class="zan-btn zan-btn--primary" bindtap="bindOkTap">同意</button>
    </view>
    </view>
  </view>







  <view class="zan-btns" style="margin-top: 30vh;">
    <button class="zan-btn-block" bindtap="bindIntroTap">
      查看引导
